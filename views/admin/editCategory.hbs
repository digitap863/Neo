<div class="page">
  <div class="container-fluid">
      <form action="/admin/edit-category/{{category._id}}" method="post" enctype="multipart/form-data"
                    class="border border-1 rounded-xl p-4 flex flex-col items-center gap-5 bg-gray-500/30">
                    <h3 class="text-2xl font-bold">Add New Category</h3>
                    <input name="category" type="text" class="w-[80%] h-10 border border-1 text-lg px-3 rounded-xl" value="{{category.category}}"  placeholder="Add new category" required>
                     <label for="prduct-image">Current Image</label>
                    <img src="/uploads/{{category.image}}" alt="">
                     <label for="product-image">Choose Brand Image</label>
                        <input type="file" name="image" class="w-[80%]"  />
                    <button type="submit" class="bg-green-500 text-white font-semibold px-2 py-2 rounded-xl">Add Category</button>
     </form>
  </div>
</div>